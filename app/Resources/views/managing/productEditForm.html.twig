{% extends 'base.html.twig' %}

{% form_theme form _self %}

{% block text_widget %}
    <input type="text" class="form-control" placeholder="Product name" {{ block('widget_attributes') }} {% if value is not empty %} value="{{ value }}" {% endif %}/>
{% endblock %}

{% block file_widget %}
    <input type="file" class="form-control-file" {{ block('widget_attributes') }} {% if value is not empty %} value="{{ value }}" {% endif %}/>
{% endblock %}

{% block textarea_widget %}
    <textarea class="form-control" row="3" maxlength="1000" placeholder="not more than 1000" {{ block('widget_attributes') }} {% if value is not empty %} value="{{ value }}" {% endif %}>
    </textarea>
{% endblock %}

{% block _attributes_vars_prototype_widget %}
    <input type="text" class="form-control" placeholder="Attribute name" {{ block('widget_attributes') }} {% if value is not empty %} value="{{ value }}" {% endif %}/>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('dynatree/jquery/jquery.js') }}" type="text/javascript"></script>
    <script src="{{ asset('dynatree/jquery/jquery-ui.custom.js') }}" type="text/javascript"></script>
    <script src="{{ asset('dynatree/jquery/jquery.cookie.js') }}" type="text/javascript"></script>
    <link rel="stylesheet" type="text/css" href="{{ asset('dynatree/src/skin/ui.dynatree.css') }}">
    <script src="{{ asset('dynatree/src/jquery.dynatree.js') }}" type="text/javascript"></script>
    <script>
        var $collectionHolder;

        // setup an "add a tag" link
        var $addTagLink = $('<a href="#" class="add_tag_link">Add attribute</a>');
        var $newLinkLi = $('<div></div>').append($addTagLink);

        jQuery(document).ready(function () {
            // Get the ul that holds the collection of tags
            $collectionHolder = $('div.attributes');

            // add the "add a tag" anchor and li to the tags ul
            $collectionHolder.append($newLinkLi);

            // count the current form inputs we have (e.g. 2), use that as the new
            // index when inserting a new item (e.g. 2)
            $collectionHolder.data('index', $collectionHolder.find(':input').length);

            $addTagLink.on('click', function (e) {
                // prevent the link from creating a "#" on the URL
                e.preventDefault();

                // add a new tag form (see next code block)
                addTagForm($collectionHolder, $newLinkLi);
            });

            $collectionHolder.find('div.attrVals').each(function () {
                addTagFormDeleteLink($(this));
            });
        });

        function addTagForm($collectionHolder, $newLinkLi) {
            // Get the data-prototype explained earlier
            var prototype = $collectionHolder.data('prototype');

            // get the new index
            var index = $collectionHolder.data('index');

            var newForm = prototype;
            // You need this only if you didn't set 'label' => false in your tags field in TaskType
            // Replace '__name__label__' in the prototype's HTML to
            // instead be a number based on how many items we have
            // newForm = newForm.replace(/__name__label__/g, index);

            // Replace '__name__' in the prototype's HTML to
            // instead be a number based on how many items we have
            newForm = newForm.replace(/__name__/g, index);

            // increase the index with one for the next item
            $collectionHolder.data('index', index + 1);

            // Display the form in the page in an li, before the "Add a tag" link li
            var $newFormLi = $('<div class="form-group attrVals"></div>').append(newForm);
            $newLinkLi.before($newFormLi);

            addTagFormDeleteLink($newFormLi);
        }


        function addTagFormDeleteLink($tagFormLi) {
            var $removeFormA = $('<button type="button" class="close" aria-label="Close">' +
                '<span aria-hidden="true">&times;</span>' +
                '</button>');
            $tagFormLi.append($removeFormA);

            $removeFormA.on('click', function (e) {
                // prevent the link from creating a "#" on the URL
                e.preventDefault();

                // remove the li for the tag form
                $tagFormLi.remove();
            });
        }
    </script>
    <script>
        $(function () {
            $("#tree").dynatree({
                onActivate: function (node) {
                    $('#renamedValue').val(node.data.title);
                    var node = $("#tree").dynatree("getActiveNode");
                    $("div.categoriesSelect select").val(node.data.key);
                },
                //persist: true,
                initAjax: {
                    url: "{{ path('get_category_tree') }}"
                }
            });
        });
    </script>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-6">
                {{ form_start(form) }}
                <div class="form-group">
                    <label>Product name:</label>
                    {{ form_widget(form.name) }}
                </div>
                <div class="form-group">
                    <label>Description:</label>
                    {{ form_widget(form.description) }}
                </div>
                <div class="form-group">
                    <label>Choose category:</label>
                    <div id="tree"></div>
                    <div class="categoriesSelect" hidden>
                        {{ form_widget(form.category) }}
                    </div>
                </div>
                <div class="form-group">
                    <label>Upload image:</label>
                    {{ form_widget(form.image) }}
                </div>
                <div class="form-group">
                    <div class="form-group attributes" data-prototype="{{ form_widget(form.attributes.vars.prototype)|e('html_attr') }}">
                        {% for attribute in form.attributes %}
                        <div class="form-group">{{ form_widget(attribute.name) }}
                                {{ form_widget(attribute.value) }}</div>
                        {% endfor %}
                    </div>
                </div>
                <button type="submit" class="btn btn-primary" id="submitButton">Create product</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
