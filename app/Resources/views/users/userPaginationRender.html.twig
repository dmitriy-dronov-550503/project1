<form action="{{ path('delete') }}" method="post">
    <button type="button submit" class="btn btn-success m-2" name="unblock">Unblock</button>
    <button type="button submit" class="btn btn-success m-2" name="moderator">Make moderator</button>
    <button type="button submit" class="btn btn-warning m-2" name="block">Block</button>
    <button type="button submit" class="btn btn-warning m-2" name="unmoderator">Make user</button>
    <button type="button submit" class="btn btn-danger m-2" name="delete">Delete</button>
<table class="table">
    <thead class="thead-default">
    <tr>
        <th>#</th>
        <th>{{ knp_pagination_sortable(pagination, 'Id', 'a.id') }}</th>
        <th>{{ knp_pagination_sortable(pagination, 'First name', 'a.firstName') }}</th>
        <th>{{ knp_pagination_sortable(pagination, 'Last name', 'a.lastName') }}</th>
        <th>{{ knp_pagination_sortable(pagination, 'Patronymic name', 'a.patronymicName') }}</th>
        <th>{{ knp_pagination_sortable(pagination, 'Username', 'a.username') }}</th>
        <th>{{ knp_pagination_sortable(pagination, 'Email', 'a.email') }}</th>
        <th>{{ knp_pagination_sortable(pagination, 'ROLE', 'a.role') }}</th>
        <th>{{ knp_pagination_sortable(pagination, 'Is Active', 'a.isActive') }}</th>
    </tr>
    </thead>
    <tbody>
    {% for user in pagination %}
        <tr>
            <td><input type="checkbox" name="checkedUsers[]" value="{{ user.id }}"></td>
            <th scope="row">{{ user.id }}</th>
            <td>{{ user.firstName }}</td>
            <td>{{ user.lastName }}</td>
            <td>{{ user.patronymicName }}</td>
            <td>{{ user.username }}</td>
            <td>{{ user.email }}</td>
            <td>{{ user.role }}</td>
            <td>{{ user.isActive }}</td>
        </tr>
    {% endfor %}


    </tbody>
</table>
</form>