{% for category in categories %}
        <li>{{ category.name }}</li>
        {% if category.children %}
            <ul>{% include "includes/child-categories.html.twig" with {'categories': category.children} %}
                       </ul>
            {% for product in category.products %}
                <ul style="text-decoration: underline;">{{ product.name }}</ul>
            {% endfor %}
        {% endif %}

{% endfor %}